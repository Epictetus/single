<%= content_for :css do %>
	<style type="text/css">
	* {margin: 0px; padding: 0px;vertical-align: bottom;}
	body {border: 20px solid #000000;background: url("<%= image_path 'bg.jpg' %>") repeat left top; text-align: center;}
	p.mes {margin: 0px auto 10px auto; font-size: 12px; line-height: 1.4;color: #000000;font-family: serif;vertical-align: baseline;}
	p.mes a {vertical-align: baseline;}
	p.mes strong {font-family: Georgia; font-size: 100px;vertical-align: baseline;}
	p.mes span {font-family: Georgia; font-size: 50px;vertical-align: baseline;}
	p#copyright {margin: 10px auto 10px auto;}
	</style>
<% end %>
<div id="mainArea">
  <h1><%= link_to(image_tag('title.gif', :alt => 'リアル診断'), root_path) %></h1>
  <p class="mes"><%= link_to "@#{params[:name]}", "http://twitter.com/#{params[:name]}" %>さんのシングル度は<strong><%= @percent %></strong><span>%</span>です。<%= @message %></p>
  <p id="tweet">
    <a href="http://twitter.com/share?text=<%= u %Q|.@#{params[:name]}のシングル度は "#{@percent} %" です。#{@message} #real_diagnosis| %>&amp;url=http://single-willnet.sqale.jp/diag/<%= params[:name] %>">
      <%= image_tag 'end.gif', alt: '結果をつぶやきましょう' %>
    </a>
  </p>
  <p class="mes">
    <% if @relate_users.present? %>
      あわせて読みたい
      <% @relate_users.each do |u| %>
        <%= link_to "@#{u} の診断", action: :diag, name: u %>&nbsp;
      <% end %>
    <% end %>
    </p>
  <p id="copyright">
    <%= image_tag 'copyright.gif', alt: '@netwillnet * @9d' %>
  </p>
</div>


